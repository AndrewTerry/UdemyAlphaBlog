<!--does this need to be styled by the messages partial?-->

<div class="container">
  <% if @article.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h2>The following errors must be corrected:</h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
</div>
