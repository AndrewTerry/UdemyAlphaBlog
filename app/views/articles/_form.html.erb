<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control rounded", placeholder: "Title of article" %>
          </div>
        </div>
        </br>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        </br>
        <div class="form-group row">
          <%= f.label "Categories", class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { include_blank: true }, { multiple: true, size: 4, class: "custom-select shadow rounded" }) %>
            </br>
            <p class="text-light"><small>Select categories (can be left blank)</small></p>
          </div>
         
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "mt-3 col-2 btn btn-success btn-sm" %>
        </div>
        <div class="text-center">
          <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
        </div>
      <% end %>
    </div>
  
  </div>
</div>