<div class="container">

  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/anyerrors', obj: @category %>
      <%= form_with(model: @category, class: "p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control rounded", placeholder: "Enter a category name" %>
          </div>
        </div>
        <br>
        <div class="form-group row justify-content-center">
          <%= f.submit class:"mt-3 col-2 btn btn-success btn-sm" %>
        </div>
        <div class="text-center">
          <%= link_to '[ Cancel and return to category listing ]', categories_path, class: "text-info" %>
        </div>
      <% end %>
    </div>
  
  </div>
</div>